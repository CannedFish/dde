<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
      <enum id="com.deepin.dde.dock.HideMode">
        <value value="0" nick="nohide"/>
        <value value="1" nick="autohide"/>
        <value value="2" nick="alwayshide"/>
      </enum>

    <schema path="/com/deepin/dde/dock/" id="com.deepin.dde.dock">
        <key name="hide-mode" enum="com.deepin.dde.dock.HideMode">
            <default>'nohide'</default>
            <summary>the hide mode</summary>
            <description>let the dock enter the auto hide mode</description>
        </key>
        <key type="b" name="active-mini-mode">
            <default>false</default>
            <summary>the mini icon mode</summary>
            <description>let the dock enter the mini icon mode to save worksapce.</description> 
        </key>
        <key type="u" name="background-color">
            <range min="0" max="0xffffff64" />
            <default>0xbcbcbc32</default>
            <summary>dock color</summary>
            <description>the dock board color value contain in an guint32 with format RGBA</description>
        </key>
    </schema>
</schemalist>
